<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/avt_vergil"
            android:layout_margin="10dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/takuya"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is cloned To Do app by me from a tutorial video on YouTube channel called DevAsLife."
        android:layout_margin="10dp"
        android:textSize="16sp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_youtube"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Go to YouTube channel"
        app:cornerRadius="30dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#ff0000"
        app:icon="@drawable/ic_youtube"
        app:iconSize="30dp"
        app:iconGravity="textStart"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_facebook"
        app:cornerRadius="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="#4267B2"
        android:text="Visit my Facebook"
        android:textAllCaps="false"
        app:icon="@drawable/ic_facebook"
        app:iconSize="30dp"
        app:iconGravity="textStart"/>


</LinearLayout>